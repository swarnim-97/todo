<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

        <!-- In spring boot there is a no need to define a bean for liquibase.
        this file will automatically run by spring boot to run liquibase on startup.
        All you need is to put your change log in “db/changelog/db.changelog-master.xml”
         and Liquibase migrations will run automatically on startup.
             -->
        <include file="db/changelog/db.changelog-schema.xml"/>
        <include file="db/changelog/db.changelog-data.xml"/>
</databaseChangeLog>